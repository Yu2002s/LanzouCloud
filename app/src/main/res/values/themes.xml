    <style name="Preference.CheckBoxPreference.Material.My">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.SwitchPreferenceCompat.Material.My">
        <item name="iconSpaceReserved">false</item>
        <item name="widgetLayout">@layout/preference_switch_material3</item>
    </style>

    <style name="Preference.DropDown.Material.My">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="CardViewStyle" parent="Widget.Material3.CardView.Filled">
        <item name="android:checkable">true</item>
    </style>

